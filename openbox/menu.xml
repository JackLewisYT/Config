<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/                 file:///usr/share/openbox/menu.xsd">
	<menu id="root-menu" label="Openbox 3">
		<item label="Browser">
			<action name="Execute">
				<execute>google-chrome</execute>
			</action>
		</item>
		<item label="Office">
			<action name="Execute">
				<execute>libreoffice</execute>
			</action>
		</item>
		<item label="My Files">
			<action name="Execute">
				<execute>pcmanfm</execute>
			</action>
		</item>
		<item label="Volume">
			<action name="Execute">
				<execute>pavucontrol</execute>
			</action>
		</item>
		<item label="Bluetooth">
			<action name="Execute">
				<execute>blueman-manager</execute>
			</action>
		</item>
		<item label="Audacious">
			<action name="Execute">
				<execute>audacious</execute>
			</action>
		</item>
		<item label="Virtualbox">
			<action name="Execute">
				<execute>virtualbox</execute>
			</action>
		</item>
		<item label="Video Editor">
			<action name="Execute">
				<execute>kdenlive</execute>
			</action>
		</item>
		<item label="Photo Editor">
			<action name="Execute">
				<execute>gimp</execute>
			</action>
		</item>
		<item label="Screen Recorder">
			<action name="Execute">
				<execute>simplescreenrecorder</execute>
			</action>
		</item>
		<item label="OBS Studio">
			<action name="Execute">
				<execute>obs</execute>
			</action>
		</item>
		<!-- This requires the presence of the 'openbox-menu' package to work -->
		<separator/>
		<menu id="root-menu-20494" label="Developer">
			<item label="Terminal">
				<action name="Execute">
					<execute>lxterminal</execute>
				</action>
			</item>
			<item label="Edit Startup">
				<action name="Execute">
					<execute>leafpad ~/.config/openbox/autostart.sh</execute>
				</action>
			</item>
			<item label="Edit Taskbar">
				<action name="Execute">
					<execute>tint2conf</execute>
				</action>
			</item>
			<item label="Edit Appearance">
				<action name="Execute">
					<execute>lxappearance</execute>
				</action>
			</item>
			<item label="Change Background">
				<action name="Execute">
					<execute>nitrogen</execute>
				</action>
			</item>
			<item label="Configure Openbox">
				<action name="Execute">
					<execute>obconf</execute>
				</action>
			</item>
			<item label="Openbox Menu Editor">
				<action name="Execute">
					<execute>obmenu</execute>
				</action>
			</item>
		</menu>
		<separator/>
		<item label="Logout">
			<action name="Exit"/>
		</item>
		<item label="Restart">
			<action name="Execute">
				<execute>reboot</execute>
			</action>
		</item>
		<item label="Shutdown">
			<action name="Execute">
				<execute>shutdown now</execute>
			</action>
		</item>
	</menu>
</openbox_menu>
